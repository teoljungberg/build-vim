#!/bin/sh

root=$(cd "$(dirname "$0")/.." && pwd)/
location="$root/tmp/vim"

if [ -n "$DEBUG" ]; then
  output="/dev/tty"
else
  output="/dev/null"
fi

if [ -d "$location" ]; then
  cd "$location" || return

  ./configure \
    --enable-cscope \
    --enable-fail-if-missing \
    --enable-fontset \
    --enable-multibyte \
    --enable-python3interp \
    --enable-rubyinterp \
    --enable-python3interp \
    --enable-terminal \
    --with-compiledby="teoljungberg" \
    --with-features=huge \
    --with-python3-config-dir=/usr/local/opt/python/Frameworks/Python.framework/Versions/3.7/include/python3.7m/ \
    --with-ruby-command=/usr/bin/ruby \
    1>$output 2>$output
  make 1>$output 2>$output
  make install 1>$output 2>$output
else
  echo "Could not find $location. Exiting."
  exit 1
fi
